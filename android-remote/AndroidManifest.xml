  <uses-sdk android:minSdkVersion="3" android:targetSdkVersion="4"/>

  <uses-permission android:name="android.permission.INTERNET" />

  <application android:allowTaskReparenting="false" android:icon="@drawable/icon" android:label="@string/app_name">
    <service android:name="TalosReceiverService">
      <intent-filter>
        <action android:name="org.nargila.robostroke.android.remote.TalosReceiverService"/>
      </intent-filter>
    </service>
    <service android:name="TalosTransmitterService">
      <intent-filter>
        <action android:name="org.nargila.robostroke.android.remote.TalosTransmitterService"/>
      </intent-filter>
    </service>
  </application>
</manifest>

